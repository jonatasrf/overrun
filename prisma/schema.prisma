// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   // "ADMIN", "USER"
  reports   Report[]
  createdAt DateTime @default(now())
}

model TractorModel {
  id        String      @id @default(uuid())
  name      String      @unique
  gearRatio Float
  image     Bytes?
}

model Report {
  id             String        @id @default(uuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  status         String        @default("OPEN") // "OPEN", "CLOSED"
  
  // Snapshots of configuration used
  tractorName    String
  gearRatioValue Float
  tractorImage   Bytes?
  
  // Tractor Configuration Data
  totalWeight    String?
  frontLoad      String?
  rearLoad       String?
  frontBallast   String?
  rearBallast    String?
  tireBrandFront String?
  tireBrandRear  String?

  userId         String
  user           User          @relation(fields: [userId], references: [id])
  
  measurements   Measurement[]
}

model Tire {
  id        String   @id @default(uuid())
  name      String   // e.g. "8.3-24R1 (MAGGION)"
  
  // Technical Data
  rim                  String?   // e.g. "W9"
  rollingCircumference Float?    // mm
  staticLoadedRadius   Float?    // mm
  overallDiameter      Float?    // mm
  
  createdAt DateTime @default(now())
}

model Measurement {
  id        String @id @default(uuid())
  reportId  String
  report    Report @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  type      String // "FRONT", "REAR"
  pressure  Int    // 24, 22, 20...
  
  val1      Float?
  val2      Float?
  val3      Float?
  average   Float? // Computed average stored for easier querying or recalculated on fly? Storing is safe.
}
